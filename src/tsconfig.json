{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types",
      "@types"
    ],
    "paths": {
      "*": ["*", "@types/node_modules/*"]
    },
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "importHelpers": true,
    "noEmitHelpers": true
  }
}
